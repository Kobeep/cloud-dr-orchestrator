[Unit]
Description=Daily PostgreSQL backup to Oracle Cloud at 2 AM
Documentation=https://github.com/Kobeep/cloud-dr-orchestrator
Requires=orchestrator-backup.service

[Timer]
# Run daily at 2:00 AM
OnCalendar=daily
OnCalendar=*-*-* 02:00:00

# If the system was powered off during the scheduled time, run on next boot
Persistent=true

# Randomize start time by up to 5 minutes to avoid load spikes
RandomizedDelaySec=5min

[Install]
WantedBy=timers.target
